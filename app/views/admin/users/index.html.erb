<h1>Listing admin_users</h1>

<table class='table table-striped'>
  <tr>
    <th>Email</th>
    <th>Roles</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |admin_user| %>
  <tr>
    <td><%= link_to admin_user.email, admin_user_path(admin_user) %></td>
    <td>
      <% admin_user.roles.each do |role| %>
        <span class='label label-success'> <%= role.name %> </span>
      <% end %>
    </td>
    <td><%= link_to 'Show', admin_user_path(admin_user) %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(admin_user) %></td>
    <td><%= link_to 'Destroy', admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

